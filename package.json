{
  "name": "mango-web",
  "version": "0.0.1",
  "description": "Mango web frontend",
  "main": "index.js",
  "scripts": {
    "watch": "esbuild --watch ./client/index.tsx --bundle --loader:.glsl=text --outfile=build/bundle.js",
    "serve": "ts-node-dev --respawn --transpile-only ./server/index.ts",
    "typecheck": "npm run typecheck --workspaces"
  },
  "workspaces": [
    "common",
    "server",
    "client"
  ],
  "private": true,
  "author": "",
  "license": "ISC",
  "dependencies": {
    "esbuild": "^0.18.14"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0"
  }
}
